<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:soundEffectsEnabled="true"
            app:srcCompat="@drawable/fondos" />
    </RelativeLayout>

// Type something ku thevayaana codugal

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <EditText
            android:id="@+id/textBox3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="103dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:hint="@string/type_something"
            android:inputType="textPersonName"
            android:paddingLeft="10sp"
            android:textColorLink="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/textBox2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/textBox3"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:fadingEdge="none|horizontal|vertical"
            android:fadingEdgeLength="@android:dimen/notification_large_icon_height"
            android:hint="@string/type_something"
            android:inputType="textPersonName"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:textColorLink="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/textBox1"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/textBox2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/type_something"
            android:inputType="textPersonName"
            android:imeOptions="actionDone"
            android:paddingLeft="10sp"
            android:textColorLink="@color/colorPrimaryDark"
            android:textIsSelectable="false" />

    </RelativeLayout>

    //FLOATING ICONS ku thevayaana codugal

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingButtonNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:focusable="true"
                app:elevation="0dp"
                app:srcCompat="@drawable/ic_autorenew_white_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingButtonClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="16dp"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:focusable="true"
                app:elevation="0dp"
                app:srcCompat="@drawable/ic_close_white_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingButtonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:clickable="true"
                android:focusable="true"
                app:elevation="0dp"
                app:srcCompat="@drawable/ic_check_white_24dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>